@page
@model LibararyWebApplication.Pages.ProfileModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Profile";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h3 class="mb-0">Thông tin người dùng</h3>
                </div>
                <div class="card-body text-center">

                    @if (Model.User != null)
                    {
                        <img src="https://api.dicebear.com/7.x/initials/svg?seed=@Model.User.Username" 
                             class="rounded-circle mb-3" 
                             width="100" height="100" 
                             alt="Avatar" />

                        <h4 class="mb-1">@Model.User.Username</h4>
                        <p class="text-muted mb-3">Hardcode@gmail.com</p>
                        @* <p class="text-muted mb-3">@Model.User.Email</p> *@

                        <table class="table table-striped">
                            <tr>
                                <th scope="row">ID</th>
                                <td>@Model.User.Id</td>
                            </tr>
                            <tr>
                                <th scope="row">Vai trò</th>
                                <td>@Model.User.Role</td>
                            </tr>
                            <tr>
                                <th scope="row">Trạng thái</th>
                                <td>
                                    @if (Model.User.Active)
                                    {
                                        <span class="badge bg-success">Đang hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Tạm khóa</span>
                                    }
                                </td>
                            </tr>
                        </table>
                    }
                    else
                    {
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Đang tải...</span>
                            </div>
                            <p class="mt-2">Đang tải thông tin...</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
