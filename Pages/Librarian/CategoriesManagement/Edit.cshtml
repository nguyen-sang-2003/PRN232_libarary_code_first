@page
@model LibararyWebApplication.Pages.Librarian.CategoriesManagement.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Edit Category";
}

<link href="/bootstrap/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">✏️ Edit Category</h4>
        </div>

        <div class="card-body p-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="Category.Id" />

                <div class="mb-3">
                    <label asp-for="Category.Name" class="form-label fw-bold">Category Name</label>
                    <input asp-for="Category.Name" class="form-control" placeholder="Enter category name" />
                    <span asp-validation-for="Category.Name" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-warning fw-bold text-dark">💾 Save Changes</button>
                <a asp-page="./Index" class="btn btn-secondary ms-2">↩️ Back to List</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
