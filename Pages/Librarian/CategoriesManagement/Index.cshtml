@page
@model LibararyWebApplication.Pages.Librarian.CategoriesManagement.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Category Management";
}

<link href="/bootstrap/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">üìö Category Management</h4>
            <a asp-page="Create" class="btn btn-light btn-sm fw-bold">‚ûï Add New Category</a>
        </div>

        <div class="card-body p-4">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width: 10%">ID</th>
                        <th style="width: 60%">Category Name</th>
                        <th style="width: 30%" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Category != null && Model.Category.Any())
                    {
                        foreach (var item in Model.Category)
                        {
                            <tr>
                                <td>@item.id</td>
                                <td>@item.Name</td>
                                <td class="text-center">
                                    <a asp-page="./Edit" asp-route-id="@item.id" class="btn btn-sm btn-warning me-1">‚úèÔ∏è Edit</a>

                                    <a asp-page="./Delete" asp-route-id="@item.id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this category?')">üóëÔ∏è Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">No categories found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
