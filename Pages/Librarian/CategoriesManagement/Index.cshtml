@page
@model LibararyWebApplication.Pages.Librarian.CategoriesManagement.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Category Management";
    Layout = "~/Pages/Shared/_LibbraLayout.cshtml";
}
<link href="/bootstrap/bootstrap.min.css" rel="stylesheet" />
<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">üìÇ Category Management</h4>
            <a asp-page="Create" class="btn btn-light btn-sm">‚ûï Add Category</a>
        </div>
        <div class="card-body">
            @if (Model.Category != null && Model.Category.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-bordered align-middle">
                        <thead class="table-secondary text-center">
                            <tr>
                                <th>ID</th>
                                <th>Category Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Category)
                            {
                                <tr>
                                    <td class="text-center">@item.id</td>
                                    <td>@item.Name</td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-2">
                                            <a asp-page="./Edit" asp-route-id="@item.id" class="btn btn-outline-warning btn-sm">‚úèÔ∏è</a>
                                            <a asp-page="./Delete" asp-route-id="@item.id" class="btn btn-outline-danger btn-sm"
                                               onclick="return confirm('Are you sure you want to delete this category?');">üóëÔ∏è</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">No categories found in the system.</div>
            }
        </div>
    </div>
</div>
