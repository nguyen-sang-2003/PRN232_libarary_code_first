@page
@model LibararyWebApplication.Pages.RuleManager.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Chỉnh sửa nội quy";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">✏️ Chỉnh sửa nội quy</h4>
        </div>

        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input type="hidden" asp-for="Rule.Id" />

                <div class="mb-3">
                    <label asp-for="Rule.Title" class="form-label fw-bold">Tiêu đề</label>
                    <input asp-for="Rule.Title" class="form-control" placeholder="Nhập tiêu đề nội quy" readonly/>
                    <span asp-validation-for="Rule.Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rule.Content" class="form-label fw-bold">Nội dung</label>
                    <textarea asp-for="Rule.Content" class="form-control" rows="4" placeholder="Nhập nội dung chi tiết"></textarea>
                    <span asp-validation-for="Rule.Content" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">💾 Lưu thay đổi</button>
                <a asp-page="./Index" class="btn btn-secondary ms-2">↩️ Quay lại</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
