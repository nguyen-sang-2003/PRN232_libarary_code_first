@page
@model LibararyWebApplication.Pages.RuleManager.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add Rule";
}

<link href="/bootstrap/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">‚ûï Add Library Rule</h4>
        </div>

        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Rule.Title" class="form-label fw-bold">Title</label>
                    <input asp-for="Rule.Title" class="form-control" placeholder="Enter rule title" />
                    <span asp-validation-for="Rule.Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rule.Content" class="form-label fw-bold">Content</label>
                    <textarea asp-for="Rule.Content" class="form-control" rows="4" placeholder="Enter detailed content"></textarea>
                    <span asp-validation-for="Rule.Content" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">üíæ Save Rule</button>
                <a asp-page="Index" class="btn btn-secondary ms-2">‚Ü©Ô∏è Back</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
