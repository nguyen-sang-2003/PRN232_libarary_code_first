@page
@model LibararyWebApplication.Pages.RuleManager.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete Rule";
}

<link href="/bootstrap/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow rounded-4 border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">🗑️ Confirm Rule Deletion</h4>
        </div>

        <div class="card-body">
            <p class="text-danger fw-bold">Are you sure you want to delete this rule?</p>

            <dl class="row">
                <dt class="col-sm-3 fw-bold">📘 Title</dt>
                <dd class="col-sm-9">@Model.Rule.Title</dd>

                <dt class="col-sm-3 fw-bold">📌 Content</dt>
                <dd class="col-sm-9">@Model.Rule.Content</dd>

                <dt class="col-sm-3 fw-bold">📅 Created At</dt>
                <dd class="col-sm-9">@Model.Rule.CreatedAt.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3 fw-bold">🔄 Last Updated</dt>
                <dd class="col-sm-9">@Model.Rule.UpdatedAt.ToString("dd/MM/yyyy")</dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <form method="post" onsubmit="return confirm('Are you sure you want to delete this rule?')">
                <input type="hidden" asp-for="Rule.Id" />
                <button type="submit" class="btn btn-danger">🗑️ Delete</button>
                <a asp-page="./Index" class="btn btn-secondary ms-2">↩️ Back</a>
            </form>
        </div>
    </div>
</div>
