@page
@model LibararyWebApplication.Pages.RuleManager.DeleteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Xóa nội quy";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow rounded-4 border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">🗑️ Xác nhận xóa nội quy</h4>
        </div>

        <div class="card-body">
            <p class="text-danger fw-bold">Bạn có chắc chắn muốn xóa nội quy này không?</p>

            <dl class="row">
                <dt class="col-sm-3 fw-bold">📘 Tiêu đề</dt>
                <dd class="col-sm-9">@Model.Rule.Title</dd>

                <dt class="col-sm-3 fw-bold">📌 Nội dung</dt>
                <dd class="col-sm-9">@Model.Rule.Content</dd>

                <dt class="col-sm-3 fw-bold">📅 Ngày tạo</dt>
                <dd class="col-sm-9">@Model.Rule.CreatedAt.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3 fw-bold">🔄 Ngày cập nhật</dt>
                <dd class="col-sm-9">@Model.Rule.UpdatedAt.ToString("dd/MM/yyyy")</dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <form method="post" onsubmit="return confirm('Bạn có chắc muốn xóa nội quy này?')">
                <input type="hidden" asp-for="Rule.Id" />
                <button type="submit" class="btn btn-danger">🗑️ Xóa</button>
                <a asp-page="./Index" class="btn btn-secondary ms-2">↩️ Quay lại</a>
            </form>
        </div>
    </div>
</div>
