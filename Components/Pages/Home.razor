 @code {
    private List<BookDto>? books;

    private string? searchTerm;
    private decimal? minPrice;
    private decimal? maxPrice;

    protected override async Task OnInitializedAsync()
    {
        await LoadBooks();
    }

    private async Task ApplyFilter()
    {
        await LoadBooks();
    }

    private async Task LoadBooks()
    {
        using HttpClient Http = new HttpClient();
        var url = "https://localhost:7129/api/Books";

        var parameters = new List<string>();
        if (!string.IsNullOrWhiteSpace(searchTerm))
            parameters.Add($"search={Uri.EscapeDataString(searchTerm)}");
        if (minPrice.HasValue)
            parameters.Add($"minPrice={minPrice.Value}");
        if (maxPrice.HasValue)
            parameters.Add($"maxPrice={maxPrice.Value}");

        if (parameters.Any())
            url += "?" + string.Join("&", parameters);

        try
        {
            var response = await Http.GetAsync(url);
            if (response.IsSuccessStatusCode)
            {
                books = await response.Content.ReadFromJsonAsync<List<BookDto>>();
            }
            else
            {
                books = new List<BookDto>();
            }
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Failed to fetch books: {ex.Message}");
            books = null;
        }
    }
}

